<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hoxucompany.thoikhoabieu.MainActivity">


    <Button
        android:id="@+id/btnInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00AE72"
        android:lineSpacingExtra="10sp"
        android:text="Nhập thời khóa biểu"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/btnViewWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00AE72"
        android:lineSpacingExtra="24sp"
        android:text="Xem Thời khóa biểu tuần"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/btnViewDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00AE72"
        android:lineSpacingExtra="24sp"
        android:text="Xem thời khóa biểu ngày"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />
</LinearLayout>
